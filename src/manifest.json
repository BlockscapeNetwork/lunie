{
  "name": "Lunie Browser Extension",
  "description": "A browser extension for Lunie.io",
  "version": null,
  "manifest_version": 2,
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "browser_action": {
    "default_title": "lunie-signer-x",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": ["fonts/*.woff2"],
  "content_scripts": [
    {
      "matches": ["https://localhost/*"],
      "js": ["contentScript.js"]
    }
  ]
}
