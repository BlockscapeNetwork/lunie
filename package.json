{
  "name": "lunie-api",
  "version": "1.0.11",
  "description": "GraphQL API for Lunie.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luniehq/lunie-api.git"
  },
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "dev-cache": "cross-env NODE_ENV=development ENABLE_CACHE=true nodemon index.js",
    "dev-docker": "docker build -t lunie-api-dev . && docker run --init -it -p 4000:4000 lunie-api-dev",
    "lint": "eslint index.js config.js lib tests",
    "lint-fix": "yarn lint --fix",
    "release": "git fetch --all && git checkout origin/develop -B develop && git pull && git checkout origin/release -B release && git pull && git merge origin/develop && git push",
    "start": "node index.js ",
    "test": "cross-env TEST=true jest",
    "changelog": "simsala log --pending-path ./changes"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "caches/eras.json"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "@polkadot/api": "^1.13.1",
    "@sentry/node": "^5.15.5",
    "apollo-datasource-rest": "^0.6.6",
    "apollo-server": "^2.13.1",
    "apollo-server-cache-redis": "^1.2.0",
    "apollo-server-plugin-response-cache": "^0.3.5",
    "bech32": "^1.1.4",
    "bignumber.js": "^9.0.0",
    "coingecko-api": "^1.0.10",
    "dotenv": "^8.2.0",
    "firebase-admin": "^8.8.0",
    "graphql": "^14.6.0",
    "graphql-redis-subscriptions": "^2.1.1",
    "lodash": "^4.17.15",
    "nock": "^12.0.3",
    "should": "^13.2.3",
    "supertest": "^4.0.2",
    "websocket": "^1.0.30"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "node-fetch": "^2.6.0",
    "nodemon": "^2.0.4",
    "prettier": "^1.19.1",
    "simsala": "^0.0.21"
  },
  "resolutions": {
    "yargs-parser": ">=18.1.2",
    "minimist": ">=1.2.3",
    "kind-of": ">=6.0.3",
    "acorn": ">=7.1.1"
  }
}
