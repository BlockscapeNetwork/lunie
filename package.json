{
  "name": "lunie-api",
  "version": "1.0.0",
  "description": "GraphQL API for Lunie.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luniehq/lunie-api.git"
  },
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "dev-cache": "cross-env NODE_ENV=development ENABLE_CACHE=true nodemon index.js",
    "dev-docker": "docker build -t lunie-api-dev . && docker run --init -it -p 4000:4000 lunie-api-dev",
    "lint": "eslint index.js config.js lib tests",
    "lint-fix": "yarn lint --fix",
    "release": "git fetch --all && git checkout origin/develop -B develop && git pull && git checkout origin/release -B release && git pull && git merge origin/develop && git push",
    "start": "node index.js ",
    "test": "cross-env TEST=true jest"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "@polkadot/api": "^v1.8.0-beta.1",
    "@polkadot/util": "^2.6.1",
    "@sentry/node": "^5.9.0",
    "apollo-datasource-rest": "^0.6.6",
    "apollo-server": "^2.9.9",
    "apollo-server-cache-redis": "^1.1.4",
    "apollo-server-plugin-response-cache": "^0.3.5",
    "bech32": "^1.1.3",
    "bignumber.js": "^9.0.0",
    "dotenv": "^8.2.0",
    "firebase-admin": "^8.8.0",
    "graphql": "^14.5.8",
    "graphql-redis-subscriptions": "^2.1.1",
    "lodash": "^4.17.15",
    "nock": "^11.7.0",
    "should": "^13.2.3",
    "supertest": "^4.0.2",
    "websocket": "^1.0.30"
  },
  "devDependencies": {
    "cross-env": "^6.0.3",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "node-fetch": "^2.6.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1"
  },
  "resolutions": {
    "minimist": "1.2.2"
  }
}