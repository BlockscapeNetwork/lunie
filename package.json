{
  "name": "lunie-signer-x",
  "version": "1.0.0",
  "description": "A Vue.js web extension",
  "author": "fabian@lunie.io",
  "licenses": [
    {
      "type": "Apache-2"
    }
  ],
  "scripts": {
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "eslint --ext .js,.vue src --fix && stylelint \"src/**/*.{css,vue}\" --fix",
    "lint:js": "eslint --ext .js,.vue src",
    "lint:css": "stylelint \"src/**/*.{css,vue}\"",
    "prettier": "prettier \"src/**/*.{js,vue}\"",
    "prettier:write": "npm run prettier -- --write",
    "build": "cross-env NODE_ENV=production webpack --hide-modules",
    "build:dev": "cross-env NODE_ENV=development webpack --hide-modules",
    "build-zip": "node scripts/build-zip.js",
    "watch": "npm run build -- --watch",
    "watch:dev": "cross-env HMR=true npm run build:dev -- --watch",
    "test:unit": "jest --coverage",
    "test": "npm run lint && npm run test:unit",
    "log": "simsala log"
  },
  "husky": {
    "hooks": {
      "pre-push": "lint-prepush"
    }
  },
  "lint-prepush": {
    "base": "develop",
    "tasks": {
      "*.{js,vue}": [
        "eslint --fix",
        "jest --bail --coverage --findRelatedTests",
        "git add"
      ],
      "*.{css,vue}": [
        "stylelint --fix",
        "git add"
      ]
    }
  },
  "dependencies": {
    "@lunie/cosmos-api": "^0.0.23",
    "@lunie/cosmos-keys": "^0.1.0",
    "@sentry/browser": "^5.4.0",
    "autosize": "^4.0.2",
    "bech32": "^1.1.3",
    "bignumber.js": "^9.0.0",
    "perfect-scrollbar": "^1.4.0",
    "regenerator-runtime": "^0.13.2",
    "vue": "^2.6.10",
    "vue-clipboard2": "^0.3.0",
    "vue-directive-tooltip": "1.4.5",
    "vue-router": "^3.0.1",
    "vuelidate": "^0.7.4",
    "vuex": "^3.0.1",
    "webextension-polyfill": "^0.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/runtime-corejs3": "^7.4.0",
    "@vue/test-utils": "^1.0.0-beta.29",
    "archiver": "^3.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.2",
    "copy-webpack-plugin": "^4.5.3",
    "core-js": "^3.1.4",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "ejs": "^2.6.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^5.2.2",
    "file-loader": "^1.1.11",
    "husky": "^2.4.0",
    "jest": "^24.8.0",
    "lint-prepush": "^0.4.1",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.9.3",
    "prettier": "^1.17.1",
    "sass-loader": "^7.1.0",
    "simsala": "^0.0.16",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "vue-jest": "^3.0.4",
    "vue-loader": "^15.4.2",
    "vue-template-compiler": "^2.6.10",
    "web-ext-types": "^2.1.0",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-extension-reloader": "^1.1.0"
  }
}
